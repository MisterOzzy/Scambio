@{
    ViewBag.Title = "Scambio";
}
@model Scambio.Web.ViewModels.LoginViewModel
<div class="main-sign-in">
        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-sign-in" }))
        {
            @Html.AntiForgeryToken()
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h2 class="panel-title">Sign In</h2>
                </div>
                <div class="container">
                    <div class="panel-body">
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.UserName, new { @class= "col-lg-3 control-label" })
                                <div class="col-lg-9">
                                    @Html.TextBoxFor(m => m.UserName, new {@class = "form-control", placeholder = "Username"})
                                </div>
                                @Html.ValidationMessageFor(m => m.UserName, string.Empty, new { @class = "col-lg-9 col-lg-offset-3" })
                            </div>

                        </div>
                        <div class="row">
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "col-lg-2 control-label" })
                                <div class="col-lg-9 col-lg-offset-1">
                                    @Html.TextBoxFor(m => m.Password, new {@class = "form-control", placeholder = "Password", type = "password"})
                                </div>
                                @Html.ValidationMessageFor(m => m.Password, string.Empty, new { @class = "col-lg-9 col-lg-offset-3" })
                                @Html.ValidationSummary(true, string.Empty, new { @class= "col-lg-9 col-lg-offset-3" })
                                <div class="col-lg-9 col-lg-offset-3">
                                    <div class="checkbox">
                                        <label>
                                            @Html.EditorFor(m => m.RememberMe) Remember me?
                                        </label>
                                    </div>
                                </div>
                                </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-lg-9 col-lg-offset-3">
                                    <button type="submit" class="btn btn-success">Sign In</button>
                                    <button class="btn btn-default" name="btnRegister" type="button" onclick="document.location.href = $('#registerUrl').attr('href');">Register</button>
                                    <a id="registerUrl" href="@Html.AttributeEncode(Url.Action("Register", "Account"))" style="display:none;"></a>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-lg-9 col-lg-offset-3">
                                    <a href="#">Forgot password?</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    @section scripts
    {
        @Scripts.Render("~/bundles/jqueryval")
    }
</div>